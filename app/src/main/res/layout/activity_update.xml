<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".update">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/menupic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/updatetext"
        android:text="بروز رسانی نماید."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/now_version"
        android:text="نسخه فعلی نصب شده در گوشی شما:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:gravity="center"

        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/updateVersion"
        android:text="بروز رسانی نماید."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

<Button
    android:layout_margin="40dp"
    android:id="@+id/updatee"
    android:background="@null"
    android:textColor="@color/white"
    android:text="دانلود نسخه بروز"
    android:textSize="23sp"
    android:layout_width="wrap_content"
    android:drawableRight="@drawable/ic_baseline_system_update_24"
    android:layout_height="wrap_content">

</Button>
    <Button
        android:id="@+id/exitt"
        android:text="خروج"
        android:textSize="15sp"
        android:drawableRight="@drawable/ic_baseline_close_24"
        android:background="@null"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>

</LinearLayout>
</RelativeLayout>