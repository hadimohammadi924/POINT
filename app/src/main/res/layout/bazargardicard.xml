<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/brooot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#B1C3C6"

        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bcards_image"
                android:layout_width="match_parent"


                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_logo4" />

            <TextView
                android:id="@+id/bCUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="توسط کاربر : meshki"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bticketsID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:drawableRight="@drawable/ic_baseline_home_24"
                android:text="کدمشتری و نام"
                android:textColor="#000"
                android:textSize="14sp" />
            <View
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:background="@color/b10"
                android:layout_height="1dp">

            </View>

            <TextView
                android:id="@+id/btitleTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="عنوان شکایت "
                android:drawableRight="@drawable/ic_baseline_edit_calendar_24"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:background="@color/b10"
                android:layout_height="1dp">
            </View>
            <TextView
                android:id="@+id/bcategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="حوزه و فوریت شکایت"
                android:drawableRight="@drawable/ic_baseline_receipt_24"
                android:textColor="#000"
                android:textSize="14sp" />
            <View
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:background="@color/b10"
                android:layout_height="1dp">

            </View>
            <TextView
                android:id="@+id/bdatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:drawableRight="@drawable/ic_baseline_record_voice_over_24"
                android:text="نوع فوریت"
                android:textColor="#3C3C3C"
                android:textSize="14sp" />
            <View
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:background="@color/b10"
                android:layout_height="1dp">

            </View>
            <TextView
                android:id="@+id/btextDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"

                android:layout_marginTop="10dp"
                android:text="متن کلی شکایت"
                android:textColor="#918E8E"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bticketsStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="درحال بررسی"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>