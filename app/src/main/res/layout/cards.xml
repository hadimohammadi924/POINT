<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/finalcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#E7EAF8"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cards_image"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:layout_marginRight="5dp"
                android:text="آیدی محصول : 10"
                android:textColor="@color/purple_700"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/cards_image"
                android:layout_width="match_parent"


                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_logo4" />


            <TextView
                android:id="@+id/text_codee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cards_image"
                android:text="آیدی محصول : 10"


                android:visibility="gone" />

            <TextView
                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_id"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="کد محصول : تست 1" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_code"

                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="اسم محصول : تست 1" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="توضحیات محصول : تست 1"
                android:textColor="@color/b7"
                android:textSize="12sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>